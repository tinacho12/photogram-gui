<h1><%= @the_user.username %></h1>

<dl>
  <dt>ID</dt>
  <dd><%= @the_user.id %></dd>

  <dt>Edit user</dt>
  <dd>
    <form action="/update_username/<%= @the_user.username %>">
      <label for="username">Username</label>
      <input id="username" type="text" name="username" value="<%= @the_user.username %>">

      <button>Update user</button>
    </form>
  </dd>
</dl>

<h2>Own photo (<%= @the_user.own_photos.count %>)</h2>

<table border="1">
  <tr>
    <th>Image</th>
    <th>Owner</th>
    <th>Caption</th>
    <th>Posted</th>
    <th></th>
  </tr>

  <% @the_user.own_photos.each do |a_photo| %>
  <tr>
    <td><img src="<%= a_photo.image %>"></td>
    <td><%= a_photo.poster.username %><%#= User.where({ :id => a_photo.owner_id }).first.username %></td>
    <td><%= a_photo.caption %></td>
    <td><%= a_photo.created_at %>d</td>
    <td>Show details</td>
  </tr>
  <% end %>

</table>
